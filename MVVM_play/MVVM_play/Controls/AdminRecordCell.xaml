<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MVVM_play.Controls.AdminRecordCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MVVM_play.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">

    <!-- The Border will fill its parent; its size/vertical alignment will be adjusted in code-behind -->
    <Border x:Name="CellBorder" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            CornerRadius="4" 
            DoubleTapped="CellBorder_DoubleTapped">
        <TextBlock x:Name="TimeTextBlock" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
    </Border>
</UserControl>
